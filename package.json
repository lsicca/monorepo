{
  "name": "lux",
  "description": "Live Under eXcellence",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:frontend": "pnpm --filter frontend run start",
    "build:frontend": "pnpm --filter frontend... run build",
    "start:backend": "pnpm --filter backend run start",
    "build:backend": "pnpm --filter backend... run build",
    "build": "pnpm -r run build",
    "dev": "pnpm --recursive --stream --parallel run dev",
    "test": "pnpm -r --if-present test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
